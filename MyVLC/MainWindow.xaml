<Window x:Class="MyVLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="MyVLC"
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0B0B0F"
        Foreground="#EDEDED"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Focusable="True"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="110"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0" Background="#0F1016" Padding="18,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="MyVLC"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           x:Name="TxtNowPlaying"
                           Text="Nada reproduciéndose"
                           Opacity="0.7"
                           FontSize="13"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        x:Name="BtnOpen"
                        Width="120"
                        Height="36"
                        Content="Abrir"
                        Background="#1ED760"
                        Foreground="#000"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="BtnOpen_Click"/>
            </Grid>
        </Border>

        <!-- VIDEO -->
        <Border Grid.Row="1" Margin="18" CornerRadius="18" Background="#000">
            <vlc:VideoView x:Name="VideoView"
                           MouseLeftButtonDown="VideoView_MouseLeftButtonDown"/>
        </Border>

        <!-- PLAYER BAR -->
        <Border Grid.Row="2" Background="#0F1016" Padding="18,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: play/pause -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnPlayPause"
                            Width="52" Height="52"
                            Content="▶"
                            FontSize="18"
                            Background="#1ED760"
                            Foreground="#000"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnPlayPause_Click"/>
                </StackPanel>

                <!-- Center: progress -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="18,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="TxtTime"
                                   Text="00:00"
                                   FontSize="12"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>

                        <Slider x:Name="SliderProgress"
                                Grid.Column="1"
                                Minimum="0"
                                Maximum="100"
                                Height="18"
                                Margin="12,0"
                                ValueChanged="SliderProgress_ValueChanged"/>

                        <TextBlock x:Name="TxtTotal"
                                   Grid.Column="2"
                                   Text="00:00"
                                   FontSize="12"
                                   Opacity="0.7"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>

                <!-- Right: volume -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="🔊" FontSize="14" Margin="0,0,8,0" Opacity="0.8"/>
                    <Slider x:Name="SliderVolume"
                            Width="140"
                            Minimum="0" Maximum="100"
                            Value="80"
                            ValueChanged="SliderVolume_ValueChanged"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>